<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <!--<link rel="icon" href="../../../../favicon.ico">-->

        <title><%= title %></title>

        <link href="/stylesheets/todo-app.min.css" rel="stylesheet">

    </head>

    <body>

        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="#"><%= title %></a>
        </nav>

        <main role="main" class="container">
            <div class="todo-app-field">
                <form>
                    <input class="form-control mr-sm-2 my-2" type="text" placeholder="Input a todo item here." aria-label="Input a todo item here.">
                    <textarea class="form-control mr-sm-2 my-2" rows="5" type="text" placeholder="Input the description here." aria-label="Input the description here."></textarea>
                    <select class="custom-select d-block w-100 mr-sm-2 my-2" id="country" required>
                        <option value="">Select the deadline.</option>
                    </select>
                    <button class="btn btn-outline-primary my-2 my-sm-0" type="button" disabled='disabled'>Add</button>
                </form>
            </div>
            <div class="todo-app-field">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="w-10">Done</th>
                            <th class="w-90">Todo item</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>

        </main><!-- /.container -->

            <script src="/javascripts/todo.js"></script>
    </body>
</html>
